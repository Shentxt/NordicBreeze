awk '/^[a-z]/ && last {print $0,"\t",last} {last=""} /^#/{last=$0}' ~/.config/bspwm/sxhkdrc |
	column -t -s $'\t' |
	awk '{$1=$1; print}' |
	rofi -dmenu -i -markup-rows -no-show-icons -width 1000 -lines 15 -yoffset 40 -theme $HOME/.config/rofi/themes/default1.rasi
