(defwidget cal []
  (box :class "cal-box"
       :orientation "v"
       :space-evenly false
    (calendar :class "cal"
              :day {formattime(EWW_TIME, "%d")}
              :month {formattime(EWW_TIME, "%m")}
              :year {formattime(EWW_TIME, "%Y")}
  ))
)

;; Windows ;;
(defwindow date
  :geometry (geometry :x "80px"
                      :y "0px"
                      :anchor "left center")
  :wm-ignore false
(cal))
