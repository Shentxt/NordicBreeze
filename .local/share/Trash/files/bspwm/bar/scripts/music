#!/bin/bash

while true; do
    player_status=$(playerctl status)
    if [ "$player_status" = "Playing" ] || [ "$player_status" = "Paused" ]; then
        if [ "$player_status" = "Playing" ] || [ -z "$metadata" ]; then
            metadata=$(playerctl metadata --format '{{ title }} - {{ artist }}')
            len=${#metadata}
        fi
        while [ ${#metadata} -lt 20 ]; do
            metadata+=" "
        done
        echo "${metadata:$i:20}"
        i=$(( (i + 1) % len ))
    else
        echo "ï†¼  Not Playing"
        i=0
    fi
    sleep 0.5
done

