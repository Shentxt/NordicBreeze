#!/bin/bash

# A script to toggle between various desktop layouts for bspwm, intended to be used for my polybar module.

CURRENT=$(cat $HOME/.config/bspwm/bar/scripts/current-layout)

# Switch layouts

# Tiled
if [[ $CURRENT == "󰍲" ]]; then
        bsp-layout set tiled
        echo "󰙀" > $HOME/.config/bspwm/bar/scripts/current-layout
fi

# Monocle
if [[ $CURRENT == "󰙀" ]]; then
        bsp-layout set monocle
        echo "󰨤" > $HOME/.config/bspwm/bar/scripts/current-layout
fi

# Grid
if [[ $CURRENT == "󰨤" ]]; then
        bsp-layout set tall
        echo "󰕮" > $HOME/.config/bspwm/bar/scripts/current-layout
fi

# Wide
if [[ $CURRENT == "󰕮" ]]; then
        bsp-layout set wide
        echo "󰕪" > $HOME/.config/bspwm/bar/scripts/current-layout
fi

# Even
if [[ $CURRENT == "󰕪" ]]; then
        bsp-layout set even
        echo "󰍲" > $HOME/.config/bspwm/bar/scripts/current-layout
fi
